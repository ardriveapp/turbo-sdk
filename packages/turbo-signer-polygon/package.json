{
  "name": "@ardrive/turbo-signer-polygon",
  "version": "0.0.1",
  "description": "Polygon signer for Turbo SDK",
  "main": "./lib/cjs/index.js",
  "types": "./lib/types/index.d.ts",
  "module": "./lib/esm/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/ardriveapp/turbo-sdk.git",
    "directory": "packages/turbo-signer-polygon"
  },
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "author": {
    "name": "Permanent Data Solutions Inc",
    "email": "info@ardrive.io",
    "website": "https://ardrive.io"
  },
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build:esm": "yarn tsc -p tsconfig.json",
    "build:cjs": "yarn tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > lib/cjs/package.json",
    "build:types": "yarn tsc -p tsconfig.types.json",
    "build": "yarn clean && yarn build:esm && yarn build:cjs && yarn build:types",
    "clean": "rimraf lib",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "echo 'No tests yet'"
  },
  "dependencies": {
    "@ardrive/turbo-sdk": "workspace:*"
  },
  "peerDependencies": {
    "@dha-team/arbundles": "^1.0.1",
    "ethers": "^6.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.8",
    "typescript": "^5.5.4"
  }
}
