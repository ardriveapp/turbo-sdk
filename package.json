{
  "name": "ardrive-turbo-sdk",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Derek Sonnenberg <derek@ardrive.io>",
  "type": "commonjs",
  "files": [
    "lib-esm",
    "lib-cjs",
    "lib-bundles"
  ],
  "scripts": {
    "build:it": "yarn clean && concurrently \" yarn tsc -p tsconfig.cjs.json && sh ./scripts/fix-pkg.sh cjs commonjs \"  \" yarn tsc -p tsconfig.esm.json && sh ./scripts/fix-pkg.sh esm module  \"",
    "build:webpack": "yarn build:it && webpack",
    "build:esbuild": "yarn build:it && node scripts/esbuild.cjs",
    "clean": "npx rimraf [ lib-cjs lib-esm lib-bundles ]",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "nyc mocha",
    "docker-test": "bash \"tests/docker-test.sh\"",
    "build": "yarn clean && tsc -p ./tsconfig.cjs.json && tsc -p tsconfig.esm.json && webpack",
    "dev": "yarn clean && tsc --project ./tsconfig.cjs.json -w",
    "ci": "yarn build && yarn docker-test"
  },
  "dependencies": {
    "arbundles": "0.9.7",
    "arweave": "1.13.7",
    "axios": "^1.4.0",
    "axios-retry": "^3.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@solana/wallet-adapter-base": "^0.9.22",
    "@types/axios": "^0.14.0",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/sinon": "^10.0.15",
    "@webpack-cli/generators": "^3.0.7",
    "browserify-fs": "^1.0.0",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "crypto-browserify": "^3.12.0",
    "esbuild": "^0.18.6",
    "esbuild-node-builtins": "^0.1.0",
    "html-webpack-plugin": "^5.5.3",
    "inspectpack": "^4.7.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "path-browserify": "^1.0.1",
    "resolve-tspaths": "^0.8.13",
    "sinon": "^15.1.2",
    "source-map-support": "^0.5.21",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^5.1.4",
    "workbox-webpack-plugin": "^7.0.0"
  }
}
